<p class= "notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>


<%= link_to edit_user_path(@user) , class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_61179" do%>
<i class="fa-thin fa-user-gear"></i>
<% end %>

<h2 calss="mt-3">New book</h2>
<div calss="form-group">
<%= form_with model: @new_book,url: books_path, method: :post, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

<tr></tr>
  <%= f.submit 'Create Book' %>

<% end %>

</div>
</div>

<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <thead>
    
    <tr>
      <th></th>
      <td>
      <%= link_to user_path(@book.user.id) do %>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
      <br>
      <%= @book.user.name %>
      </br>
      </td>
      <% end %>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
　　　<td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
　　　<td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
　　　<% end %>
  </thead>
  <tbody>
      
  </tbody>
</table>
</div>
</div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
